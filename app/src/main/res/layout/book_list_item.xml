<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="1dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/list_item_bg"
        android:padding="1dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:gravity="center_vertical"
            >
            <TextView
                android:id="@+id/book_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="密码编程学与网络安全"
                android:textSize="22sp"
                android:textColor="#000000"
                />
            <TextView
                android:id="@+id/book_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignBottom="@id/book_name"
                android:textSize="18sp"
                android:text="$33.5"
                android:textColor="#ff0000"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="#c9c9c9"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/book_publish"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#959191"
                    android:textSize="18sp"
                    android:text="出版社:电子工业出版社"/>
                <TextView
                    android:id="@+id/book_course"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:layout_marginTop="12dp"
                    android:textColor="#959191"
                    android:text="相关课程:工科数学(上)"/>
            </LinearLayout>
            <TextView
                android:id="@+id/book_order"
                android:layout_width="70dp"
                android:layout_height="35dp"
                android:gravity="center"
                android:textSize="16sp"
                android:background="@mipmap/not_order"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="#ffffff"
                android:text="未订阅"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>